{
  "manifest_version": 2,

  "name": "Chandlery for Fallen London",
  "short_name": "Chandlery",
  "description": "Unofficial Fallen London extension to keep an eye on your action candle and Opportunities deck",

  "version": "1.2",

  "icons": {
    "16" : "img/icon48.png",
    "48" : "img/icon48.png",
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["http://fallenlondon.storynexus.com/Gap/Load*"],
      "js": ["js/lib/mutation-summary.js", "js/content.js"]
    }
  ],

  "background": {
    "scripts": [ 
      "js/background.js",
      "js/notification.js",
      "js/storageSync.js"
    ],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },

  "permissions": [
    "storage", 
    "notifications"
  ],
  
  "minimum_chrome_version": "42"
}
